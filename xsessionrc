
[[ -f ~/.Xmodmap ]] && xmodmap ~/.Xmodmap

# setxkbmap -layout us
setxkbmap -option caps:super

xinput set-prop "SynPS/2 Synaptics TouchPad" "libinput Tapping Enabled"                       1
xinput set-prop "SynPS/2 Synaptics TouchPad" "libinput Tapping Drag Enabled"                  1
xinput set-prop "SynPS/2 Synaptics TouchPad" "libinput Tapping Drag Lock Enabled"             0
xinput set-prop "SynPS/2 Synaptics TouchPad" "libinput Tapping Button Mapping Enabled"        1 0
xinput set-prop "SynPS/2 Synaptics TouchPad" "libinput Natural Scrolling Enabled"             1
xinput set-prop "SynPS/2 Synaptics TouchPad" "libinput Disable While Typing Enabled"          1
xinput set-prop "SynPS/2 Synaptics TouchPad" "libinput Scroll Method Enabled"                 1 0 0
xinput set-prop "SynPS/2 Synaptics TouchPad" "libinput Click Method Enabled"                  0 1
xinput set-prop "SynPS/2 Synaptics TouchPad" "libinput Middle Emulation Enabled"              0
xinput set-prop "SynPS/2 Synaptics TouchPad" "libinput Accel Speed"                           0.640288
xinput set-prop "SynPS/2 Synaptics TouchPad" "libinput Left Handed Enabled"                   0
xinput set-prop "SynPS/2 Synaptics TouchPad" "libinput Send Events Mode Enabled"              0 0
xinput set-prop "SynPS/2 Synaptics TouchPad" "libinput Horizontal Scroll Enabled"             1

